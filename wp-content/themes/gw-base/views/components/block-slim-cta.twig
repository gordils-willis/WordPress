{% if bg %}
	{% set background = bg %}
{% else %}
	{% set background = block.background %}
{% endif %}

{% if headline %}
	{% set headline = headline %}
{% else %}
	{% set headline = block.headline %}
{% endif %}

{% if text %}
	{% set text = text %}
{% else %}
	{% set text = block.text %}
{% endif %}

<section class="block-slim-cta {{ background }}-bg {% if background == 'dark' or background == 'grey' %}py-margin{% else %}my-margin{% endif %}">
	<div class="container">
		<div class="max-text-width align-center mx-auto">
			<div class="h2 highlight">{{ headline }}</div>
			{% if text %}
				<hr class="short thick main-color mx-auto my-2">
				<div class="pt-1 light-text-color">
					<p class="md mx-auto">{{ text }}</p>
				</div>
			{% endif %}
			{% if block.buttons %}
				<div class="pt-3">
					<div class="grid-flex no-break center">
						{% for button in block.buttons %}
							{% if button.button_link.title %}
								<div class="col mb-2">
									<a href="{{ button.button_link.url }}" target="{{button.button_link.target}}" class="{{ button.color }} button large transition-link">{{ button.button_link.title }}</a>
								</div>
							{% endif %}
						{% endfor %}
					</div>
				</div>
			{% elseif buttonText and buttonLink %}
				<div class="pt-3">
					<div class="grid-flex no-break center">
						<div class="col mb-2">
							<a href="{{ buttonLink }}" class="button large transition-link">{{ buttonText }}</a>
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
</section>